extends layouts/main

block content
    .form-container
        form(action=`/books${routes.uploadBook}`, method="post")
            label(for="file") Book Cover
            input(type="file", id="file", name="file", required=true)
            input(type="text", placeholder="Title", name="title", required=true)
            input(type="text", name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Book")